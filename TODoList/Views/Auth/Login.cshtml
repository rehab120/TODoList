 @using TODoList.ViewModel
@model LoginViewModel
<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="w-100" style="max-width: 400px;">
        <div class="card" style="border-radius: 10px;">
            <div class="card-body p-4 p-md-5">
                <h4 class="text-center mb-4">Login</h4>

                <form asp-action="Login" method="post" asp-controller="Auth">
                    <div class="form-outline mb-3">
                        <input asp-for="UserName" id="formName" class="form-control" />
                        <label class="form-label" asp-for="UserName"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-3">
                        <input asp-for="Password" id="formPassword" class="form-control" />
                        <label class="form-label" asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe"></label>
                    </div>

                    <button type="submit" value="Login" class="btn w-100" style="background-color: #4a148c; color: white;">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-image: url('/images/ac54a128942c750799c2c1fe144d2467.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        margin: 0;
    }

    /* Reduce padding on smaller devices */
    @@media (max-width: 576px) {
        .card-body

    {
        padding: 1.5rem !important;
    }

    h4 {
        font-size: 1.25rem;
    }

    }
</style>
