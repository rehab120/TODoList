@{
}
@model LoginViewModel
<style>
    body {
        background-image: url('/images/ac54a128942c750799c2c1fe144d2467.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh; 
        margin: 0;
    }


    .card:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .btn-dark:hover {
        background-color: #4a148c;
        color: white;
        transform: scale(1.03);
        transition: all 0.3s ease;
    }

    a:hover {
        color: #4a148c;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    input.form-control:hover,
    input.form-control:focus {
        border-color: #4a148c;
        box-shadow: 0 0 5px rgba(74, 20, 140, 0.5);
        transition: all 0.3s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card {
        animation: fadeInUp 0.8s ease-out;
    }

    h4.text-center {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.2s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(1) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 0.4s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(2) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 0.6s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(3) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 0.8s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(4) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 1s;
        animation-fill-mode: both;
    }


    .d-flex.justify-content-center {
        animation: fadeInUp 0.6s ease;
        animation-delay: 1.4s;
        animation-fill-mode: both;
    }

    p.text-center {
        animation: fadeInUp 0.6s ease;
        animation-delay: 1.6s;
        animation-fill-mode: both;
    }

</style>


<div class="container d-flex justify-content-center align-items-center py-5">
    <div class="col-12 col-md-6 col-lg-5 col-xl-4">
        <div class="card" style="border-radius: 10px; min-height: 300px;">
            <div class="card-body p-5">
                <h4 class="text-center mb-4">Login</h4>

                <form asp-action="Login" method="post" asp-controller="Auth">
                    <div class="form-outline mb-3">
                        <input asp-for="UserName" id="formName" class="form-control" placeholder="Username" />
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <div class="form-outline mb-3">
                        <input asp-for="Password" id="formPassword" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="form-group form-check mt-4 mb-4">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>

                    <div class="d-flex justify-content-center mt-4 mb-4">
                        <button type="submit" value="Login" class="btn w-100" style="background-color: #4a148c; color: white;">Login</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}