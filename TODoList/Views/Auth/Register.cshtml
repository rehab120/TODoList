@{

}
@model RegisterViewModel
<style>
    body {
        background-image: url('/images/ac54a128942c750799c2c1fe144d2467.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
    }

    .card:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background-color: #218838;
        color: white;
        transform: scale(1.03);
        transition: all 0.3s ease;
    }

    a:hover {
        color: #4a148c;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    input.form-control:hover,
    input.form-control:focus {
        border-color: #4a148c;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
        transition: all 0.3s ease;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card {
        animation: fadeInUp 0.8s ease-out;
    }

    h4.text {
        animation: fadeInUp 1s ease-in-out;
        animation-delay: 0.2s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(1) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 0.4s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(2) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 0.6s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(3) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 0.8s;
        animation-fill-mode: both;
    }

    .form-outline:nth-child(4) {
        animation: fadeInUp 0.6s ease;
        animation-delay: 1s;
        animation-fill-mode: both;
    }

    .d-flex.justify-content-center {
        animation: fadeInUp 0.6s ease;
        animation-delay: 1.4s;
        animation-fill-mode: both;
    }

    p.text-center {
        animation: fadeInUp 0.6s ease;
        animation-delay: 1.6s;
        animation-fill-mode: both;
    }

</style>
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4">
            <div class="card" style="border-radius: 10px;">
                <div class="card-body p-5">
                    <h4 class="text text-center mb-4">Create Account</h4>

                    <form asp-action="Register">
                        <div class="form-outline mb-3">
                            <input asp-for="UserName" id="formName" class="form-control form-control-sm" placeholder="Username" />
                            <span asp-validation-for="UserName"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <input asp-for="Email" id="formEmail" class="form-control form-control-sm" placeholder="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <input asp-for="Password" id="formPassword" class="form-control form-control-sm" placeholder="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <input asp-for="ConfirmPassword" id="formRepeatPassword" class="form-control form-control-sm" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button type="submit" value="Create" class="btn w-100" style="background-color: #4a148c; color: white;">Register</button>
                        </div>

                        <p class="text-center text-muted mt-3 mb-0">
                            Already have an account? <a href="/Auth/Login" class="fw-bold text-body"><u>Login</u></a>
                        </p>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

