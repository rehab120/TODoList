@using TODoList.ViewModel
@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-image: url('/images/ac54a128942c750799c2c1fe144d2467.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            margin: 0;
        }

        .bg-overlay {
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 10px;
        }

        .card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background-color: #218838;
            color: white;
            transform: scale(1.03);
            transition: all 0.3s ease;
        }

        input.form-control:hover,
        input.form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.5);
            transition: all 0.3s ease;
        }
        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .card, h4, .form-outline, .d-flex, p.text-center {
            animation: fadeInUp 0.8s ease-out;
        }
    </style>
</head>
<body>
    <div class="container h-100 d-flex align-items-center justify-content-center py-4">
        <div class="col-12 col-sm-10 col-md-8 col-lg-5">
            <div class="card bg-overlay shadow-sm">
                <div class="card-body p-4 p-md-5">
                    <h4 class="text-uppercase text-center mb-4">Create Account</h4>

                    <form asp-action="Register">
                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control form-control-sm" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="Email"></label>
                            <input asp-for="Email" class="form-control form-control-sm" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control form-control-sm" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-3">
                            <label class="form-label" asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn" style="background-color: #4a148c; color: white;">Register</button>
                        </div>

                        <p class="text-center text-muted mt-3 mb-0">
                            Already have an account? <a href="/Auth/Login" class="fw-bold text-body"><u>Login</u></a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
