@{
    ViewData["Title"] = "Home Page";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: url('/images/ac54a128942c750799c2c1fe144d2467.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    main {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 15px;
        text-align: center;
    }

    .display-4 {
        font-size: 3rem;
        color: white;
        font-weight: bold;
        text-shadow: 2px 2px 6px black;
        max-width: 90%;
    }

    
    .highlight {
        color: #4a148c; 
        font-size: 3.5rem; 
        font-weight: bold;
    }

    
    @@media (max-width: 576px) {
        .display-4

    {
        font-size: 1.8rem;
    }

    .highlight {
        font-size: 2.2rem;
    }

    }

   
    @@media (min-width: 577px) and (max-width: 992px) {
        .display-4

    {
        font-size: 2.4rem;
    }

    .highlight {
        font-size: 2.8rem;
    }

    }
</style>

<main>
    <p class="display-4">
        Welcome to <span class="highlight">PlanMate</span>
    </p>
</main>


