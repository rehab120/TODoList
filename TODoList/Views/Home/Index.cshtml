@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('/images/ac54a128942c750799c2c1fe144d2467.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        margin: 0;
    }

    .text-center {
        text-align: center;
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .display-4 {
        font-size: 3rem;
        color: white;
        font-weight: bold; /* ✅ الخط عريض */
        text-shadow: 2px 2px 6px black;
        transition: transform 0.3s ease, color 0.3s ease;
        cursor: pointer;
    }

        .display-4:hover {
            transform: scale(1.1);
            color: #9c27b0; /* ✅ لون hover أخضر ناعم */
        }
</style>

<div class="text-center">
    <p class="display-4">Welcome to Our Website</p>
</div>
