
@model IEnumerable<TODoList.Models.Contact>

@{
    ViewData["Title"] = "ContactFromAgent";
}

<style>
    thead {
        background-color: #4a148c;
        color: white;
    }

    @@media (max-width: 768px) {
        table thead

    {
        display: none; 
    }

    table tbody tr {
        display: block;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 10px;
        background: #f9f9f9;
    }

    table tbody td {
        display: flex;
        justify-content: space-between;
        padding: 8px 5px;
    }

        table tbody td::before {
            content: attr(data-label);
            font-weight: bold;
                color: #4a148c;
        }

    }
</style>

<h1>Contacts</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.Subject)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Message)</th>
                <th>@Html.DisplayNameFor(model => model.User_id)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="User Name">@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td data-label="Subject">@Html.DisplayFor(modelItem => item.Subject)</td>
                    <td data-label="Email">@Html.DisplayFor(modelItem => item.Email)</td>
                    <td data-label="Message">@Html.DisplayFor(modelItem => item.Message)</td>
                    <td data-label="User ID">@Html.DisplayFor(modelItem => item.User_id)</td>
                    <td data-label="Actions">
                        <form asp-controller="User" asp-action="DeleteContacts" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-link" style="color: rgba(47, 6, 150, 0.8);"
                                    onclick="return confirm('Are you sure you want to delete this ?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
