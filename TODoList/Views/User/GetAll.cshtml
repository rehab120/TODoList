@model IEnumerable<TODoList.ViewModel.AdminRoleModelView>

@{
    ViewData["Title"] = "Admins";
}

<style>
    /* Purple table header */
    thead {
        background-color: #4a148c;
        color: white;
    }

    /* Mobile-first table styling */
    @@media (max-width: 768px) {
        table thead

    {
        display: none; /* Hide table headers on small devices */
    }

    table tbody tr {
        display: block;
        margin-bottom: 1rem;
        background: #fff;
        border-radius: 8px;
        padding: 0.8rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    table tbody td,
    table tbody th {
        display: flex;
        justify-content: space-between;
        padding: 0.4rem 0;
        border: none !important;
    }

        table tbody td::before,
        table tbody th::before {
            content: attr(data-label);
            font-weight: bold;
            color: #4a148c;
        }

    .btn-link {
        padding: 0;
    }

    }
</style>

<h1 class="mb-4">Admins</h1>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr data-id="@i.Id">
                    <th scope="row" data-label="ID">@i.Id</th>
                    <td data-label="Name">@i.UserName</td>
                    <td data-label="Email">@i.Email</td>
                    <td data-label="Phone Number">@i.PhoneNumber</td>
                    <td data-label="Address">@i.Address</td>
                    <td data-label="Action">
                        <form asp-controller="User" asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@i.Id" />
                            <button type="submit" class="btn btn-link" style="color: rgba(47, 6, 150, 0.8);"
                                    onclick="return confirm('Are you sure you want to delete this user?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
